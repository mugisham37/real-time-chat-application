# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/chatapp?schema=public"
POSTGRES_USER=chatapp_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=chatapp

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# API Configuration
API_URL=http://localhost:4000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_SOCKET_URL=http://localhost:4000

# Server Configuration
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@chatapp.com
FROM_NAME=Chat Application

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Development Tools
PRISMA_STUDIO_PORT=5555

# Production Overrides (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=info
# DATABASE_URL="postgresql://prod_user:prod_password@prod_host:5432/chatapp_prod?schema=public"
# REDIS_URL="redis://prod_redis_host:6379"
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
# NEXT_PUBLIC_SOCKET_URL=https://your-api-domain.com
# NEXTAUTH_URL=https://your-frontend-domain.com
